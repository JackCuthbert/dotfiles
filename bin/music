#!/bin/bash

STACK="mpd mpdscribble mpd-mpris"

for arg in "$@"
do
    case $arg in
      -s|--start)
        systemctl --user start $STACK; exit 0
        ;;
      -x|--stop)
        systemctl --user stop $STACK; exit 0
        ;;
      *)
        echo "Only --start (-s) or --stop (-x) arguments are available"; exit 1
        ;;
    esac
done

if [ "$#" -eq 0 ]; then
  ncmpcpp -b ~/.config/ncmpcpp/bindings
fi

