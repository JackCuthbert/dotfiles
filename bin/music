#!/bin/bash

set -e

STACK="mpd mpdscribble mpd-mpris"

for arg in "$@"
do
    case $arg in
      -r|--up)
        echo "Starting MPD services..."
        systemctl --user start $STACK
        exit 0
        ;;
      -x|--down)
        echo "Stopping MPD services..."
        systemctl --user stop $STACK
        exit 0
        ;;
      -s|--status)
        systemctl --user status -n 0 $STACK;
        exit 0
        ;;
      *)
        echo "Only --up (-u), --down (-d), or --status (-s) arguments are available"
        exit 1
        ;;
    esac
done

if [ "$#" -eq 0 ]; then
  ncmpcpp -b ~/.config/ncmpcpp/bindings
fi

